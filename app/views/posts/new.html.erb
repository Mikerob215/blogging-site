<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @post do |f| %>
    <%= f.label :title, "Title:", class: "form-control" %>
    <%= f.text_field :title, size: "5", class: "form-control" %>
    <%= f.label :body, "Blog:", class: "form-control" %>
    <%= f.text_area :body, class: "form-control", rows: "20" %>
    <%= f.submit "Submit", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
