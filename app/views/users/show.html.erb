<div class="row">
  <div class="col-md-12 text-center">
    <h1>
      <%= @user.name %>'s blog</h1>
  </div>
  <div class="col-md-8 col-md-offset-2">
    <ul class="list-group">
      <% @user.posts.all.each do |posts| %>
      <h1>
        <%= posts.title %>
      </h1>
      <li class="list-group-item">
        <%= posts.body %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
